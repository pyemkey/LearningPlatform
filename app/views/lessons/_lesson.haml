%tr{class: "#{lesson.completed?(current_user) ? "success" : "none"}"}
  %td= lesson.title
  %td= lesson.status(current_user)
  %td
    - if lesson.started?(current_user) 
      =link_to("Resume", [lesson.course, lesson], class: "btn btn-xs btn-primary") 
    -else
      =button_to("Start", [lesson.course, lesson], class: "btn btn-xs btn-success")